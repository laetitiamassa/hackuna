

<div class="homebg_pro">
	<%= render 'layouts/messages' %>
	<div class="row">
		<div class="homecatchprobig"><b>Protégez votre entreprise</b>
			<br>
		</div>
		<div class="col-md-8">
	<div class="homecatchpro">
	
		<b><br>Donnez à vos équipes
		<br>les bons réflexes juridiques</b></div>
</div>
			
		<div class="signup_form col-md-3">
		

		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>

	    <div class="form-group">
	      
	      <%= f.email_field :email, :placeholder => "email", class: 'form-control input-lg' %>
	    </div>
	    <div class="form-group">
	     
	      <%= f.password_field :password, :placeholder => "mot de passe", class: 'form-control input-lg' %>
	    </div>
	    <div class="form-group">
	     
	      <%= f.password_field :password_confirmation, :placeholder => "confirmer mot de passe", class: 'form-control input-lg' %>
	    </div>
	    <div class="form-group invisible">
	          <%= f.check_box :as_pro, :checked => true %> Je travaille en entreprise     
	        </div>
	     <%= f.submit 'Inscription', :class => 'btn btn-primary btn-lg btn-block' %>
	  <% end %>
	</div>
	
</div>
</div>


