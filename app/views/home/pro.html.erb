<div class="homebg_pro">
	
		
	<div class="signup_form col-md-3 col-md-offset-8">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>

	    <div class="form-group">
	      
	      <%= f.email_field :email, :placeholder => "email", class: 'form-control input-lg' %>
	    </div>
	    <div class="form-group">
	     
	      <%= f.password_field :password, :placeholder => "password", class: 'form-control input-lg' %>
	    </div>
	    <div class="form-group">
	     
	      <%= f.password_field :password_confirmation, :placeholder => "password", class: 'form-control input-lg' %>
	    </div>
	    <div class="form-group">
	          <%= f.check_box :as_pro, :checked => true %> Je travaille en entreprise     
	        </div>
	     <%= f.submit 'Inscription', :class => 'btn btn-primary btn-lg btn-block' %>
	  <% end %>
	</div>
	<div class="signup_frame col-md-3 col-md-offset-8">
	</div>

</div>


