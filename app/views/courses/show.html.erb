
<h2><%= @course.name %>
	<br><small><%= @course.description %></small>
</h2>
<br>

<% if current_user.courses.include?(@course) %>
<div class="tabbable">
	<ul class="nav nav-tabs">
  <li role="presentation" class="active" ><a data-toggle="tab" href="#slideshow">Slideshow</a></li>
  <li role="presentation" ><a data-toggle="tab" href="#checklist">Checklist</a></li>
  <li role="presentation" ><a data-toggle="tab" href="#feedback">Feedback</a></li>
</ul>

<div class="tab-content">
	<div class="tab-pane fade in active" role ="tabpanel" id="slideshow">
		<br>


<div class="col-md-10 col-md-offset-1">

	<p class="lead">Voici le slideshow du cours.
	<br>En cliquant en bas du slideshow, vous pourrez télécharger la version pdf.</p>

	<% if @course.name.include? "acheteur" %>
	<%= render "telindus_acheteurs" %>
	<% elsif @course.name.include? "vendeur" %>
	<%= render "telindus_vendeurs" %>
	<% end %>
</div>

	
	</div>

	<div class="tab-pane fade" id="checklist">
		<br>


<div class="col-md-10 col-md-offset-1">
	<p class="lead">En pleine négociation ? N'oubliez pas l'essentiel !</p>
	<% if @course.name.include? "acheteur" %>
	<%= render "telindus_acheteurs_checklist" %>
	<% elsif @course.name.include? "vendeur" %>
	<%= render "telindus_vendeurs_checklist" %>
	<% end %>
</div>
	</div>

	<div class="tab-pane fade" id="feedback">
		<div class="col-md-8 col-md-offset-2">
			<%= render "feedbacks" %>
		</div>
 	</div>

</div>
<% else %>

<br>
<h3 class="text-center">Vous n'avez pas encore souscrit à cette formation
<br>
  <small>Vous souhaitez nous adresser une demande d'inscription ? 
    <br>Cliquez-ci dessous :</small>
  <br>
  <br><%= link_to "Demande d'inscription", "mailto:contact@hackuna.org", class: "btn btn-primary btn-lg" %>
</h3>


<% end %>




    

